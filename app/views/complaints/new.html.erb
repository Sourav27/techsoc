<h1 class="page-header">New complaint</h1>
<%= form_for(@complaint) do |f|%>
<div class="form-group">
    <%= f.label "Title" %>
<%= f.text_field :title, class: "form-control" %>
</div>
<div class="form-group">
    <%= f.label "Complaint" %>
<%= f.text_area :text  , class: "form-control"%>
<%= f.submit "Submit", class: "btn btn-primary" %>
</div>
<% end %>